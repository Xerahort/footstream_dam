<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dam.footstream.AlarmaSleepActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Alarma"
        android:id="@+id/textViewAlarma"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#ff4d4d"
        android:padding="10dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textAlarm"
        android:layout_below="@+id/textViewAlarma"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:padding="10dp" />

    <CheckBox
        android:id="@+id/checkAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activar Alarma"
        android:checked="false"
        android:layout_centerHorizontal="true"
        android:paddingBottom="2dp"
        android:layout_below="@+id/textAlarm" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sleep"
        android:id="@+id/textViewSleep"
        android:background="#ff4d4d"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/checkAlarm"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textSleep"
        android:layout_below="@+id/textViewSleep"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:padding="10dp" />

    <CheckBox
        android:id="@+id/checkSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activar Sleep"
        android:checked="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textSleep" />


</RelativeLayout>
